# Marketing-Ops Configuration
# Copy to .env and fill in values

# ===================
# KILL SWITCHES
# ===================
PUBLISH_ENABLED=true

# ===================
# PLATFORM TOKENS
# ===================

# GitHub
GITHUB_TOKEN=
GITHUB_ORG=
GITHUB_REPO=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Reddit
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_SUBREDDITS=agenium,a2a_protocol

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=
TELEGRAM_GROUP_ID=

# Discord
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_IDS=

# Hacker News (optional - limited API)
HN_USERNAME=
HN_PASSWORD=

# ===================
# RATE LIMITS (per day)
# ===================
RATE_LIMIT_TWITTER_POSTS=3
RATE_LIMIT_TWITTER_REPLIES=10
RATE_LIMIT_REDDIT_POSTS=2
RATE_LIMIT_REDDIT_COMMENTS=10
RATE_LIMIT_HN_SUBMISSIONS=1
RATE_LIMIT_HN_COMMENTS=5
RATE_LIMIT_TELEGRAM_POSTS=3
RATE_LIMIT_GITHUB_DISCUSSIONS=2
RATE_LIMIT_GITHUB_COMMENTS=5

# ===================
# POLICY
# ===================
QUIET_HOURS_START=01:00
QUIET_HOURS_END=07:00
QUIET_HOURS_TZ=Europe/Berlin
RISK_THRESHOLD=0.7

# ===================
# CIRCUIT BREAKER
# ===================
CB_FAILURE_THRESHOLD=5
CB_COOLDOWN_HOURS=24

# ===================
# MOLTBOOK
# ===================
MOLTBOOK_PATH=/opt/marketing-ops/moltbook

# ===================
# DATABASE
# ===================
SQLITE_PATH=/opt/marketing-ops/shared/store/marketing.db
