# Marketing Agent Swarm - Production Config
# Phase 5: LIVE Publishing Enabled

# ============================================================================
# PUBLISHING CONTROL
# ============================================================================
PUBLISH_ENABLED=true
DRY_RUN=false

# Post budgets (per platform per run)
MAX_LIVE_POSTS_PER_PLATFORM=1
MAX_LIVE_REPLIES_PER_PLATFORM=2

# ============================================================================
# PLATFORM ENABLE FLAGS (default: true if credentials exist)
# ============================================================================
ENABLE_GITHUB=true
ENABLE_TELEGRAM=true
ENABLE_X=true
ENABLE_REDDIT=true
ENABLE_DISCORD=true
ENABLE_HN=false  # No API, manual only

# ============================================================================
# GITHUB CREDENTIALS
# ============================================================================
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=

# ============================================================================
# TELEGRAM CREDENTIALS
# ============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=

# ============================================================================
# X (TWITTER) CREDENTIALS
# ============================================================================
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# ============================================================================
# REDDIT CREDENTIALS
# ============================================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_SUBREDDIT=

# ============================================================================
# DISCORD CREDENTIALS
# ============================================================================
DISCORD_WEBHOOK_URL=

# ============================================================================
# PATHS (Docker defaults)
# ============================================================================
WORKSPACE_DIR=/workspace
MOLTBOOK_DIR=/moltbook
CONFIG_DIR=/config
LOGS_DIR=/logs
STORE_DB=/workspace/store.db

# ============================================================================
# SCHEDULING (Europe/Berlin)
# ============================================================================
TZ=Europe/Berlin
QUIET_HOURS_START=1
QUIET_HOURS_END=7
